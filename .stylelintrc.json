{
  "extends": ["stylelint-config-standard-scss"],
  "rules": {
    "custom-property-empty-line-before": null,
    "selector-class-pattern": "^[a-z0-9\\-]+$"
  },
  "overrides": [
    {
      "files": ["**/*.module.scss"],
      "rules": {
        "selector-class-pattern": "^[a-z][a-zA-Z0-9]*$"
      }
    }
  ]
}
